{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (server) build with gcc-15",
      "binaryDir": "${sourceDir}/build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/gcc-15",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-15"
      }
    },
    {
      "name": "personal-computer",
      "displayName": "Build on personal computer (system default compiler)",
      "binaryDir": "${sourceDir}/build"
    }
  ]
}
